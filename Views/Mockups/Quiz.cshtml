@{
    @if ( ViewData["QuizResult"] == "Quiz results")
    {       
        <h1 span style = "margin:20px; margin-left:-20px" >@ViewData["QuizResult"]</h1>
        <h2 span style = "margin:20px; margin-left:-20px" >Right answers @Model.rightAnswersCount out @Model.questionsCount</h2>
        
        <ol>
            @for (int i = 0; i < @Model.questionsCount; i++)
            {
                <li>
                    @Model.quiz[i].x 
                    @Model.quiz[i].sign 
                    @Model.quiz[i].y 
                    =
                    @Model.answers[i]
                </li>
            }
        </ol>       
    }

    else 
    {      
        @using (Html.BeginForm())
        {
            <h1 span style = "margin: 15px; margin-left:0">@ViewData["QuizResult"]</h1>           
            <h4>@Model.x @Model.sign @Model.y =</h4>
            @Html.TextBox("resAns","", new { type="number"})<br/><br/>           
            <input type="submit" value="Next" name="Action"/>  
            <input span style = "background-color: blue; color:white;" type="submit" value="Finish" name="Action"/>            
        }
    }
}