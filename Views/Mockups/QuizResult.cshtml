@{
      <h1 span style = "margin:20px; margin-left:-20px">Quiz results</h1>
        
        @if (@Model.questionsCount == 0) {<h2>The quiz has not been started!</h2>}
        else {  
           <h2 span style = "margin:20px; margin-left:-20px" >Right answers @Model.rightAnswersCount out @Model.questionsCount</h2>
           <ol>
            @for (int i = 0; i < @Model.questionsCount; i++)
            {
                <li>
                    @Model.quiz[i].x 
                    @Model.quiz[i].sign 
                    @Model.quiz[i].y 
                    =
                    @Model.answers[i]
                </li>
            }
           </ol>
        }
}